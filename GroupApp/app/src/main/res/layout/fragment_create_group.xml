<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.groupapp.groupapp.groupapp.screens.CreateGroupFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_groupCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/create_group"
            />



        <TextView
            android:id="@+id/tv_inputDigit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            />



        <GridView
            android:id="@+id/gv_keyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:padding="20dp"
            android:layout_below="@+id/tv_inputDigit"
            >
        </GridView>

        <Button
            android:id="@+id/b_joinGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorWhite"
            android:layout_below="@+id/gv_keyboard"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="@string/join_group" />

    </RelativeLayout>

</FrameLayout>
